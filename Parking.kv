<CustButton@Button>:
   font_size: 32

<HomeScreen>:
   on_parent: root.FocusTextInput()
   GridLayout:
      id: home
      display: entry
      padding: 10
      spacing: 10
      rows: 2

      BoxLayout:
         TextInput:
            id: entry
            font_size: 32
            multiline: False
            on_text_validate: root.enterText()

      BoxLayout:
         orientation: 'horizontal'
         BoxLayout:
            orientation: 'vertical'
            BoxLayout:
               spacing: 10
               CustButton:
                  text: "1"
                  on_press:
                     entry.text += self.text
                     root.FocusTextInput()
               CustButton:
                  text: "2"
                  on_press:
                     entry.text += self.text
                     root.FocusTextInput()
               CustButton:
                  text: "3"
                  on_press:
                     entry.text += self.text
                     root.FocusTextInput()

                  
            BoxLayout:
               spacing: 10
               CustButton:
                  text: "4"
                  on_press:
                     entry.text += self.text
                     root.FocusTextInput()
               CustButton:
                  text: "5"
                  on_press:
                     entry.text += self.text
                     root.FocusTextInput() 
               CustButton:
                  text: "6"
                  on_press:
                     entry.text += self.text
                     root.FocusTextInput()

            BoxLayout:
               spacing: 10
               CustButton:
                  text: "7"
                  on_press:
                     entry.text += self.text
                     root.FocusTextInput()
               CustButton:
                  text: "8"
                  on_press:
                     entry.text += self.text
                     root.FocusTextInput()
               CustButton:
                  text: "9"
                  on_press:
                     entry.text += self.text
                     root.FocusTextInput()

            BoxLayout:
               spacing: 10
               Label:
                  text: ""
               CustButton:
                  text: "0"
                  on_press:
                     entry.text += self.text
                     root.FocusTextInput()
               Label:
                  text: ""

         BoxLayout:
            padding: 10
            spacing: 10
            orientation: 'vertical'
            CustButton:
               text: "Enter"
               on_press: root.enterText()
            CustButton:
               text: "Back"
               on_press: root.removeText()
            CustButton:
               text: "Amount of car"
               on_press:
                  root.manager.transition.direction = 'left'
                  root.manager.current = 'AmountOfCar'
            CustButton:
               text: "Total Price"
               on_press:
                  root.manager.transition.direction = 'left'
                  root.manager.current = 'AmountOfMoney'


<AmountOfCarScreen>:
   on_parent: root.getAmountOfCar()
   BoxLayout:
      Button:
         text: 'Back to menu'
         on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'Home'

      Label:
         id: amountOfCar
         text: ''

<AmountOfMoneyScreen>:
   on_parent: root.getMoney()
   BoxLayout:
      Button:
         text: 'Back to menu'
         on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'Home'

      Label:
         id: totalMoney
         text: ''
